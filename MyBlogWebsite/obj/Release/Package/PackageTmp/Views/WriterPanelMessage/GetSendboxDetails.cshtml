@model EntityLayer.Conctrete.Message
@{
    ViewBag.Title = "GetSendboxDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<html>

<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">

        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">



        <div class="row">
            @Html.Action("MessageListMenu", "WriterPanelMessage")
            <div class="col-md-9">
                <div class="card card-primary card-outline">






                    <div class="card-body p-0">
                        <div class="mailbox-read-info">
                            <h5>Subject :  @Html.DisplayFor(x => x.MessageSubject)</h5>
                            <br />

                            <h6>
                                Mail: @Html.DisplayFor(x => x.MessageSender)
                                <span class="mailbox-read-time float-right">@Html.DisplayFor(x => x.MessageDate)</span>
                            </h6>
                        </div>
                        <!-- /.mailbox-read-info -->
                        <div class="mailbox-controls with-border text-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">
                                    <i class="far fa-trash-alt"></i>
                                </button>
                                <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Reply">
                                    <i class="fas fa-reply"></i>
                                </button>
                                <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Forward">
                                    <i class="fas fa-share"></i>
                                </button>
                            </div>
                            <!-- /.btn-group -->
                            <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Print">
                                <i class="fas fa-print"></i>
                            </button>
                        </div>
                        <!-- /.mailbox-controls -->
                        <div class="mailbox-read-message">
                            <p>@Html.DisplayFor(x => x.MessageContent)</p>
                        </div>

                        <!-- /.mailbox-read-message -->
                    </div>

                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>

        <!-- /.row -->
    </section>
</body>
</html>

